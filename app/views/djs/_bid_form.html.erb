<%= form_for dj.bids.new do |f| %>
  <%= dj.stage_name %>&nbsp;&nbsp;&nbsp;&nbsp;
  <%= f.text_field :offering, placeholder: "#{random_bid}" %>
  <%= f.hidden_field :dj_id, value: dj.id %>
  <%= f.hidden_field :competition_id, value: current_competition.id %>
  <%= f.submit "Bid", class: 'submit' %>
<% end %>